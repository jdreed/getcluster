# $Id: Makefile.in,v 1.2 1998-12-25 19:38:07 rbasch Exp $

SHELL=/bin/sh
VPATH=@srcdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
srcdir=@srcdir@
top_srcdir=@top_srcdir@
prefix=@prefix@
exec_prefix=@exec_prefix@
bindir=@bindir@
lbindir=@lbindir@
mandir=@mandir@

CC=@CC@
DEFS=@DEFS@
CPPFLAGS=@CPPFLAGS@
CFLAGS=@CFLAGS@
LDFLAGS=@LDFLAGS@
LIBS=-lhesiod @LIBS@
ALL_CFLAGS=${CPPFLAGS} ${CFLAGS} ${DEFS}

all: getcluster

getcluster: getcluster.o
	${CC} ${LDFLAGS} -o getcluster getcluster.o ${LIBS}

.c.o:
	${CC} -c ${ALL_CFLAGS} $<

check:
	sh ${srcdir}/tests.sh

install:
	${top_srcdir}/mkinstalldirs ${DESTDIR}${lbindir}
	${top_srcdir}/mkinstalldirs ${DESTDIR}${mandir}/man1
	${INSTALL_PROGRAM} getcluster ${DESTDIR}${lbindir}
	${INSTALL} -m 444 ${srcdir}/getcluster.1 ${DESTDIR}${mandir}/man1

clean:
	rm -f getcluster.o getcluster

distclean: clean
	rm -f config.cache config.log config.status Makefile
